/**
 * Implements hook_form_FORM_ID_alter().
 */
function dropshark_form_user_pass_alter(&$form) {
  if (!in_array('dropshark_user_pass_reset', $form['#submit'])) {
    $form['#submit'][] = 'dropshark_user_pass_reset';
  }
}

/**
 * Submit callback for user_pass form.
 */
function dropshark_user_pass_reset($form, $form_state) {
  $account = $form_state['values']['account'];
  dropshark_handle_event('user_pass_reset', $account);
}
